<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_user_search"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_profile" />

    <TextView
        android:id="@+id/user_name_user_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/profile_image_user_search"
        android:text="@string/username"
        android:textSize="19sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/online_image_user_search"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_below="@id/user_name_user_search"
        android:layout_marginStart="-16dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/profile_image_user_search"
        android:src="@drawable/profile_image"
        android:visibility="gone"
        app:civ_border_color="#05df29"
        app:civ_border_width="10dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/offline_image_user_search"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_below="@id/user_name_user_search"
        android:layout_marginStart="-16dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/profile_image_user_search"
        android:src="@drawable/profile_image"
        android:visibility="gone"
        app:civ_border_color="#808080"
        app:civ_border_width="10dp" />

    <TextView
        android:id="@+id/last_message_user_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_user_search"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/profile_image_user_search"
        android:maxLines="1"
        android:padding="6dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="19sp" />


</RelativeLayout>